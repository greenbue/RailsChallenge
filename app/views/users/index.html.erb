<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
        <p id="notice"><%= notice %></p>

            <h1>Users List</h1>

            <table class = "table table-hover  table-condensed">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Age</th>
                  <th colspan="3"></th>
                </tr>
              </thead>

              <tbody>
                <% @users.each do |user| %>
                  <tr>
                    <td><%= user.Name %></td>
                    <td><%= user.Age %></td>
                    <td><%= link_to 'Show Budget', user, :class=> "btn btn-default btn-xs" %></td>
                    <td><%= link_to 'Edit User', edit_user_path(user), :class=> "btn btn-info btn-xs" %></td>
                    <td><%= link_to 'Delete User', user, method: :delete, data: { confirm: 'Are you sure?' }, :style=>"color:#fff;", :class=> "btn btn-danger btn-xs"%></td>
                  </tr>
                <% end %>
              </tbody>
            </table>

            <br>

            <%= link_to 'New User', new_user_path, class: "btn btn-warning" %>
      </div>
  </div>
</div>
