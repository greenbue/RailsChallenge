<div class="container">
  <div class="row">
    <div class="col-md-6">
        <p id="notice"><%= notice %></p>

        <h1>Listing Incomes</h1>

        <table class = "table table-hover">
          <thead>
            <tr>
              <th>Income source</th>
              <th>Amount</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @incomes.each do |income| %>
              <tr>
                <td><%= income.income_source %></td>
                <td><%= income.amount %></td>
                <td><%= link_to 'Show', income %></td>
                <td><%= link_to 'Edit', edit_income_path(income) %></td>
                <td><%= link_to 'Destroy', income, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <br>

        <%= link_to 'New Income', new_income_path, class: "btn btn-warning"%>
    </div>
  </div>
</div>
