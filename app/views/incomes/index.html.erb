<body>
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <p id="notice"><%= notice %></p>

          <h1>Listing Incomes</h1>

          <table class = "table table-hover  table-condensed">
            <thead>
            <tr>
              <th>User</th>
              <th>Income source</th>
              <th>Amount</th>
              <th colspan="3"></th>
            </tr>
            </thead>

            <tbody>
            <% @incomes.each do |income| %>
                <tr>
                  <td><%= income.user_id %></td>
                  <td><%= income.income_source %></td>
                  <td><%= income.amount %></td>
                  <td><%= link_to 'Show Details', income,:class=> "btn btn-default btn-xs" %></td>
                  <td><%= link_to 'Edit Details', edit_income_path(income), :class=> "btn btn-info btn-xs" %></td>
                  <td><%= link_to 'Remove Income', income, method: :delete, data: { confirm: 'Are you sure?' }, :style=>"color:#fff;", :class=> "btn btn-danger btn-xs" %></td>
                </tr>
            <% end %>
            </tbody>
          </table>

          <br>

          <%= link_to 'Go to Users', users_path %>
        </div>
      </div>
    </div>
</body>

