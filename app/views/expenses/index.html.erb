<div class="row">
  <div class="col-md-12">
    <p id="notice"><%= notice %></p>

    <h1 class = "padding">Listing Expenses</h1>

    <table class="table table-hover  table-condensed">
      <thead>
      <tr>
        <th>User</th>
        <th>Expense source</th>
        <th>Expense type</th>
        <th>Amount</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @expenses.each do |expense| %>
        <tr>
          <td><%= expense.user_id %></td>
          <td><%= expense.expense_source %></td>
          <td><%= expense.expense_type %></td>
          <td><%= expense.amount %></td>
          <td><%= link_to 'Edit Details', edit_expense_path(expense), :class=> "btn btn-info btn-xs" %></td>
          <td><%= link_to 'Remove Expense', expense, method: :delete, data: { confirm: 'Are you sure?' }, :style=>"color:#fff;", :class=> "btn btn-danger btn-xs" %></td>
        </tr>
      <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'Go to Users', users_path %>
  </div>
</div>

